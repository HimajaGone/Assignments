package com.patterns.practice;

public class Pattern2 {

	public static void main(String[] args) {
		for(int i=1;i<=5;i++) {
			int num=1;
			System.out.printf("%"+(num-i)*2+"s","");
			for(int j=1;j<=i;j++) {
				System.out.printf("%4d",num);
				num=num*(i-j)/(j+1);
			}
			System.out.println();
		}
	}

}
