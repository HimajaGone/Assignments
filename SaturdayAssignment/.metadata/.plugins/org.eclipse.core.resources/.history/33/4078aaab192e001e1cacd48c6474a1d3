package com.patterns.practice;

public class Pattern10 {

	public static void main(String[] args) {
		for(int i=1;i<=5;i++) {
			for(int j=5;j>=i;j--)
			{
				System.out.print(" " );
			}
			char ch='A';
			for(int k=1;k<=(2*i-1);k++) {
				if(k==1||k==(2*i-1)||i==1) {
					System.out.print(ch);
					
				}
				else {
					System.out.print(" ");
					ch++;
				}
				
			}
			System.out.println();
		}
		for(int i=1;i<=5;i++) {
			for(int j=5;j>=i;j--)
			{
				System.out.print(" ");
			}
			char ch='A';
			for(int k=1;k<=(2*i-1);k++) {
				System.out.print(ch);
				ch++;
			}
		}
	}

}
